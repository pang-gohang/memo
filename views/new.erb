            <form action="/new" method="post">
              <div class="field">
                <label>タイトル</label>
                <textarea id="subject" name="subject" required rows="2"></textarea>
              </div>
              <div class="field">
                <label>内容</label>
                <textarea id="content" name="content" required></textarea>
              </div>
              <td>
                <button input type="submit" value="追加" class="ui black button">
                  登録
                </button>
              <button class="ui black basic button" onclick="location.href = '/'">戻る</button>
              </td>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
